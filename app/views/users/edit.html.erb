<% content_for :title do %>
  ReDiscover Weekly | Edit Account
<% end %>

<h2>Edit User Information</h2>
<p>
  You can edit your email address and decide if you'd like to continue to have your playlists backedup automatically.
</p>
<div class="row">
  <div class="col-6">
    <%= form_for @user, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-check">
        <%= f.check_box :auto_sync, class: "form-check-input" %>
        <%= f.label :auto_sync, "Automatically add playlist to my Spotify account during weekly backup?" %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-6">
    <h2>Delete your account?</h2>
    <%= button_to "Delete my account", user_path(@user), method: :delete, data: { confirm: "Are you sure? This can't be undone." }, class: "btn btn-danger" %>
  </div>
</div>
